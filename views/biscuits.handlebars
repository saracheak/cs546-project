{{!--List all biscuits possible for a user to earn--}}

<!DOCTYPE html>
<html>
    <head>
        <title>Biscuit Page</title>
        <link rel="stylesheet" href="/css/styles.css">
    </head>
    
    <body class="biscuit-body">
        <header class="biscuit-header"><h1>Biscuits To Earn</h1></header>
        <p class="biscuit-paragraph">
            Here are all of the biscuit badges that exist and how you earn them. The darker biscuits are the ones your doggy earned and drooled on
        </p>
        <div class="biscuit-container">
            {{#each allBiscuits}}
                <div class="biscuit-card {{#if this.earned}}earned{{else}}unearned{{/if}}">
                <strong>{{this.biscuit_name}}</strong>
                <span>{{this.description}}</span>
                </div>
            {{/each}}
        </div>

        <div class="return-home">
            <a href="/home">Back to Homepage</a>
        </div>
    </body>
</html>